{
  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true
      }
  },
  "rules": {
    "camelcase": 1,
    "curly": [ 2, "multi-line"],
    "eqeqeq": [ 2, "smart"],
    "eol-last": 2,
    "linebreak-style": [ 2, "unix" ],
    "no-const-assign": 2,
    "no-extra-semi": 2,
    "no-eval": 2,
    "no-tabs": 2,
    "no-trailing-spaces": 2,
    "no-use-before-define": [ 2, {
      "functions": false,
      "classes": false
    } ],
    "no-var": 2,
    "quotes": [ 2, "single", {
      "avoidEscape": true,
      "allowTemplateLiterals": true
    } ],
    "prefer-const": 2,
    "semi": 2,
    "space-infix-ops": 1,
    "strict": 0
  }
}
